{% extends "base.html.twig" %}

{% block title %}Question: {{ question }}{% endblock %}

{% block body %}
    <h1>{{ question }}</h1>

    <div>
        Let's say we'll answer this later.
    </div>

    <h2>Answers ({{ answers|length }})</h2>

    {% for answer in answers %}
        <li>{{ answer }}</li>
    {% endfor %}
{% endblock %}
